# ========================
# SERVIDOR
# ========================
PORT=3000
NODE_ENV=development

# ========================
# BANCO DE DADOS (Supabase)
# ========================
# Cole a Connection String do Supabase (Project Settings > Database > Connection string > URI)
# Use a versão com pooling (porta 6543) para produção:
DATABASE_URL="postgresql://postgres.SEU_PROJECT_REF:SUA_SENHA@aws-0-us-west-2.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Use a conexão direta (porta 5432) para migrations:
DIRECT_URL="postgresql://postgres:SUA_SENHA@db.SEU_PROJECT_REF.supabase.co:5432/postgres"

# ========================
# OPENAI
# ========================
OPENAI_API_KEY=sk-proj-sua-chave-aqui
OPENAI_MODEL=gpt-4.1-mini

# ========================
# EVOLUTION API (WhatsApp)
# ========================
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua-api-key-aqui
EVOLUTION_INSTANCE_NAME=clinica

# ========================
# GOOGLE CALENDAR
# ========================
# Opção 1: Service Account (recomendado para produção)
GOOGLE_SERVICE_ACCOUNT_EMAIL=bot@seu-projeto.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Opção 2: OAuth2 (para desenvolvimento)
GOOGLE_CLIENT_ID=seu-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-seu-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_REFRESH_TOKEN=seu-refresh-token-aqui

# ========================
# JWT (Admin)
# ========================
JWT_SECRET=sua-chave-secreta-super-segura-aqui-minimo-32-caracteres
JWT_EXPIRES_IN=7d

# ========================
# ADMIN
# ========================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ========================
# NOTIFICAÇÕES
# ========================
# WhatsApp do atendente para receber escalações
ATTENDANT_WHATSAPP=5511999999999
# Fuso horário
